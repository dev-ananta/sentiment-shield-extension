{
  "manifest_version": 3,
  "name": "Sentiment Shield",
  "version": "1.0.0",
  "description": "Automatically filters social media posts by emotional tone via NLP. Block toxic, angry, or negative content w/ customizable overlay.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["lib/sentiment.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}